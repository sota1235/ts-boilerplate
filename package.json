{
  "name": "ts-boilerplate",
  "version": "0.0.1",
  "description": "Simple boilerplate for @sota1235",
  "main": "index.js",
  "engines": {
    "node": ">=v12.10.0"
  },
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "express": "^4.17.1",
    "morgan": "^1.9.1",
    "typescript": "^4.0.0"
  },
  "devDependencies": {
    "@stoplight/spectral": "^5.3.0",
    "@types/express": "4.17.8",
    "@types/jest": "26.0.24",
    "@types/morgan": "1.9.3",
    "@typescript-eslint/eslint-plugin": "4.28.3",
    "@typescript-eslint/parser": "4.28.3",
    "eslint": "7.30.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-prettier": "3.4.0",
    "husky": "4.3.8",
    "jest": "27.0.6",
    "lint-staged": "10.5.4",
    "nodemon": "2.0.12",
    "prettier": "2.3.2",
    "redoc-cli": "^0.9.7",
    "ts-jest": "27.0.3",
    "ts-node": "9.1.1"
  },
  "scripts": {
    "build": "tsc",
    "watch": "nodemon",
    "start:dev": "ts-node src/index.ts",
    "start:prod": "node lib/index.js",
    "doc:dev": "redoc-cli serve ./spec.yml",
    "doc:build": "redoc-cli bundle ./spec.yml",
    "doc:lint": "spectral lint ./spec.yml",
    "fix": "npm run prettier && npm run eslint:fix",
    "lint": "npm run eslint",
    "eslint": "eslint 'src/**/*.ts'",
    "eslint:fix": "npm run eslint --fix",
    "prettier": "prettier './src/**/*.ts' --write",
    "test": "jest",
    "test:ci": "jest -c ./jest.config.ci.js"
  },
  "keywords": [],
  "author": "@sota1235",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run fix",
      "git add"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "npm run start:dev"
  }
}
